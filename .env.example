# Development Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://querysense:querysense_dev@localhost:5432/querysense

# Redis Configuration
REDIS_URL=redis://localhost:6379

# ElasticSearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=querysense
MINIO_SECRET_KEY=querysense_dev

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8001
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
JWT_SECRET=your_jwt_secret_here

# Real-time Service Configuration
REALTIME_PORT=8002
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_REALTIME_URL=http://localhost:8002

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,docx,txt,md,csv,xlsx

# Security Configuration
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_here

# Analytics Configuration
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
